
@{
    ViewBag.Title = "Index";
}

<h2>Cities</h2>

<div ng-controller="mainController">
    <ul >
        <li ng-repeat="city in cities">{{ city.Name }}</li>
    </ul>

    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <form class="form-horizontal col-md-6">
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="username">Username:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="username" ng-model="LoginData.username">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="password">Password:</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="password" ng-model="LoginData.password">
                        </div>
                    </div>
                    <button class="btn btn-default" ng-click="login(LoginData)">Login</button>
                    <a href="#/register" class="btn btn-default">Register</a>
                </form>
            </div>
        </div>
    </div>
</div>